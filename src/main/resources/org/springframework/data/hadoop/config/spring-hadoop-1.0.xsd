	<xsd:element name="pig">
		<xsd:annotation>
		   <xsd:documentation><![CDATA[
Defines a Pig server.
				]]>
          </xsd:documentation>
	      <xsd:appinfo>
	        <tool:annotation>
	          <tool:exports type="org.apache.pig.PigServer"/>
