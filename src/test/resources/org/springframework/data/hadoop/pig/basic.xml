<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:hdp="http://www.springframework.org/schema/hadoop"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
      	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
      	http://www.springframework.org/schema/hadoop http://www.springframework.org/schema/hadoop/spring-hadoop.xsd">

	<import resource="../hadoop-ctx.xml"/>

	<bean id="pig-ctx" class="org.springframework.data.hadoop.pig.PigContextFactoryBean" p:exec-type="LOCAL" p:configuration-ref="hadoop-configuration"/>
	<bean id="pig" class="org.springframework.data.hadoop.pig.PigServerFactoryBean" p:pig-context-ref="pig-ctx"/>
	
	<hdp:pig-server configuration-ref="hadoop-configuration" exec-type="LOCAL" job-name="pig-script">
		<hdp:script location="org/springframework/data/hadoop/pig/script.pig" >
			<prop key="war">web</prop>
		</hdp:script>
		<hdp:script location="org/springframework/data/hadoop/pig/script.pig" />
		<hdp:properties>
			<prop key="ivy">blue</prop>
		</hdp:properties>
	</hdp:pig-server>
</beans>