<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:hdp="http://www.springframework.org/schema/hadoop"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
      	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
      	http://www.springframework.org/schema/hadoop http://www.springframework.org/schema/hadoop/spring-hadoop.xsd">

 	<!-- 

	<import resource="../hadoop-ctx.xml"/>
 	
 	 p:configuration-ref="hadoop-configuration"
 	 
 	 configuration-ref="hadoop-configuration"
 	 -->
	<bean id="pig-ctx" class="org.springframework.data.hadoop.pig.PigContextFactoryBean" p:exec-type="LOCAL"/>
	<bean id="pig" class="org.springframework.data.hadoop.pig.PigServerFactoryBean" p:pig-context-ref="pig-ctx"/>
	
	<pig-server  exec-type="LOCAL" job-name="pig-script" xmlns="http://www.springframework.org/schema/hadoop">
		<properties>
			ivy=blue
		</properties>
		<script location="org/springframework/data/hadoop/pig/script.pig">
			<arguments>
				war=web
			</arguments>
		</script>
		<script location="org/springframework/data/hadoop/pig/script.pig" />
		<script>
			<arguments>
				war=web
			</arguments>
			A = LOAD 'src/test/resources/logs/apache_access.log' USING PigStorage() AS (name:chararray, age:int);
			B = FOREACH A GENERATE name;
			DUMP B;
		</script>
	</pig-server>
</beans>